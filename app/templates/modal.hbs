
{{#modal-dialog}}

  <form {{action "submitTeam" on="submit"}}>
    <div id="team-modal" class="modal" tabindex="-1">
      <div class="modal-header">
        <button type="button" {{action "cancel"}} class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4>Create New Team</h4>
      </div>
      <div class="modal-body">
        <fieldset>
          <div class="control-group">
              <label for="name">Team Name</label>
              {{input value=name}}
          </div>
        </fieldset>
      </div>
      <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn" {{action "cancel"}}>Cancel</button>
        <button type="button" class="btn" {{action "submitTeam"}}>Create</button>
      </div>
    </div>
  </form>

{{/modal-dialog}}
